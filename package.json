  "dependencies": {
    "body-parser": "^1.18.3",
    "concurrently": "^4.1.0",
    "express": "^4.16.4",
    "mongoose": "^5.3.16"
  },
  "devDependencies": {
    "nodemon": "^1.18.8"
  }
}
